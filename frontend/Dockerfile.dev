FROM node:20-alpine

WORKDIR /app

COPY package*.json ./
RUN npm ci

# Copy is optional for dev (bind mount will provide files),
# but keeping it helps when you run without volumes.
COPY . .

EXPOSE 5173

# Helps file watching in Docker (especially macOS/Windows)
ENV CHOKIDAR_USEPOLLING=true
ENV WATCHPACK_POLLING=true

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]